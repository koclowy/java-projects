      <Button fx:id="journalStatusButton" layoutX="659.0" layoutY="79.0" mnemonicParsing="false" onMouseClicked="#handleJournalStatusButton" prefHeight="74.0" prefWidth="77.0" style="-fx-background-color: transparent;">
